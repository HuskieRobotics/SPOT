        .tab-content.active {
            display: block;
        }

        .step {
            background: #f9f9f9;
            border-left: 5px solid #ff6030;
            padding: 25px;
            margin: 20px 0;
            border-radius: 8px;
        }

        .step h4 {
            color: #ff6030;
            font-size: 1.4rem;
            margin: 0 0 15px 0;
        }

        .code-block {
            background: #263238;
            color: #aed581;
            padding: 20px;
            border-radius: 8px;
            font-family: 'Courier New', monospace;
            font-size: 1rem;
            overflow-x: auto;
            margin: 15px 0;
            line-height: 1.6;
        }

        .code-comment {
            color: #78909c;
        }

        .warning {
            background: #fff3cd;
            border-left: 5px solid #ff9800;
            padding: 20px;
            margin: 20px 0;
            border-radius: 8px;
        }

        .warning strong {
            color: #e65100;
            display: block;
            margin-bottom: 10px;
            font-size: 1.2rem;
        }

        .warning p {
