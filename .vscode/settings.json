{
  // Formatting and linting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "eslint.lintTask.enable": true,
  "eslint.workingDirectories": [{ "mode": "auto" }], // important for mono-repo projects
  "files.autoSave": "afterDelay", // hero
  "prettier.endOfLine": "auto", // cross-platform

  // Language-Specific
  "javascript.updateImportsOnFileMove.enabled": "always",
  "cSpell.words": [
    "autol",
    "bluegreen",
    "darkbluegreen",
    "lightbluegreen",
    "teleop",
    "teleopl"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "html.customData": [
    "./node_modules/@shoelace-style/shoelace/dist/vscode.html-custom-data.json"
  ]
}
