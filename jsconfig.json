{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["@types/node"]
  },
  "exclude": ["node_modules", "**/node_modules/*", "**/ace-builds/*"]
}